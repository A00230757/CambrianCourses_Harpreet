<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LinearLayoutStyle"
        android:orientation="vertical"
        >
        <!--to show already added departments, to add student in-->
        <Spinner
            android:id="@+id/spinnerdepartment"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            style="@style/TextViewStyle_Info"
            android:text="ADD NEW STUDENT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--input student id-->
        <EditText
            android:hint="enter student id"
            android:id="@+id/edittext_student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--input student name-->
        <EditText
            android:hint="enter student name"
            android:id="@+id/edittext_student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--input student email-->
        <EditText
            android:id="@+id/edittext_email"
            android:hint="enter student email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--input student mobile-->
        <EditText
            android:id="@+id/edittext_mobile"
            android:hint="enter student mobile"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--student password-->
        <EditText
            android:id="@+id/edittext_password"
            android:hint="Student password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--student image path-->
        <EditText
            android:id="@+id/edittext_imagepath"
            android:hint="image path set automatically"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <!--buttonto open gallery to choose professor image-->
            <Button
                android:onClick="gallery"
                android:text="Open Gallery"
                style="@style/ButtonStyle_listmain"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <!--button to add student in firebase database-->
            <Button
                android:onClick="add"
                android:text="Add"
                style="@style/ButtonStyle_listmain"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            style="@style/TextViewStyle_Info"
            android:id="@+id/tv1"
            android:text="LIST OF STUDENTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--listview to view already added students and to delete them-->
        <ListView
            android:id="@+id/listview_student"
            android:layout_width="match_parent"
            android:layout_height="250dp"></ListView>


    </LinearLayout>
</ScrollView>