<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    style="@style/LinearLayoutStyle"
    tools:context=".EditDepartmentDialogActivity">
    <TextView
        android:text="UPDATE DEPARTMENT"
        style="@style/TextViewStyle_Info"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/edittextdepartmentname"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/edittextdepartmentdescription"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/departmentimage"
        style="@style/ImageViewAdminHome"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PHOTO"
        style="@style/ButtonStyle_listmain"
        android:onClick="gallery"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:text="UPDATE"
            android:onClick="updateDepartment"
            style="@style/ButtonStyle_listmain"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="CANCEL"
            android:onClick="disableDialog"
            style="@style/ButtonStyle_listmain"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>