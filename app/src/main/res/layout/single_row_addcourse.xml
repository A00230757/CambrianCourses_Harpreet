<?xml version="1.0" encoding="utf-8"?>
<!--this is single layout file with various views to show single course detail-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--image view to show course image-->
    <ImageView
        android:id="@+id/imv1course"
        android:scaleType="fitXY"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="185dp" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <!--textview course name-->
        <TextView
            style="@style/TextViewStyle_SingleLayout"
            android:id="@+id/texview_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--textview course description-->
        <TextView
            style="@style/TextViewStyle_SingleLayout"
            android:id="@+id/texview_course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--textview course photo path-->
        <TextView
            style="@style/TextViewStyle_SingleLayout"
            android:id="@+id/texview_course_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--button to delete course-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            style="@style/ButtonStyle_list"
            android:id="@+id/btdeletecourse"/>
    </LinearLayout>
</LinearLayout>
