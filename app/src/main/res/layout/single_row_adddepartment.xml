<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imv1dept"
        android:scaleType="fitXY"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="185dp" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="#6c0909"
            android:id="@+id/texview_department_name"
            android:layout_marginBottom="5dp"
            android:fontFamily="cursive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="cursive"
            android:textSize="20dp"
            android:textColor="#6c0909"
            android:layout_marginBottom="5dp"
            android:id="@+id/texview_department_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:textColor="#6c0909"
            android:fontFamily="cursive"
            android:layout_marginBottom="5dp"
            android:id="@+id/texview_department_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Delete"
                style="@style/ButtonStyle_list"
                android:id="@+id/btdeletedept"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Edit"
                style="@style/ButtonStyle_list"
                android:id="@+id/bteditdept"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
